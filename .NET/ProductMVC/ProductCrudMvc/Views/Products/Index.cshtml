@{
}

@model IEnumerable<ProductCrudMvc.Models.Product>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

    <h1>Product List</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Unit Price</th>
                <th>Image Url</th>
                <th>Quantity</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model)
            {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.UnitPrice</td>
                <td>@product.ImageUrl</td>
                <td>@product.Quantity</td>
            </tr>
            }
        </tbody>
</table>