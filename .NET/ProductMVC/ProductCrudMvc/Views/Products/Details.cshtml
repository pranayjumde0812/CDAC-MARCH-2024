@{
}
@model ProductCrudMvc.Models.Product;

<h2>Product By Id</h2>
<div>
    <h4>Product Id : @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title:</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Unit Price:</dt>
        <dd class="col-sm-10">@Model.UnitPrice</dd>

        <dt class="col-sm-2">Image URL:</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>

        <dt class="col-sm-2">Quantity:</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <!-- Add more details as needed -->
    </dl>
</div>